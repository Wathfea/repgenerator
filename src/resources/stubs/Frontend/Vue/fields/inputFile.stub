<div class="flex text-sm text-gray-600">
    <label for="{{fieldLower}}" class="relative cursor-pointer bg-white rounded-md font-medium text-indigo-600 hover:text-indigo-500 focus-within:outline-none focus-within:ring-2 focus-within:ring-offset-2 focus-within:ring-indigo-500">
        <span>Upload a {{field}} file</span>
        <input v-on:change="handleFileUpload( $event )" id="{{fieldLower}}" name="{{fieldLower}}" type="file" class="sr-only" />
    </label>
    <p class="pl-1">or drag and drop</p>
</div>
